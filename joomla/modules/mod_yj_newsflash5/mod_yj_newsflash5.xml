<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="module" group="content">
<name>Yj Newsflash 5.0</name>
<author>Youjoomla LLC</author>
<creationDate>7/8/09</creationDate>
<license>Youjoomla LLC</license>
<authorEmail>youjoomla@gmail.com</authorEmail>
<authorUrl>www.youjoomla.com</authorUrl>
<version>1.0</version>
	<description>PLEASE GO TO YOUJOOMLA NEWSFLASH 5.0 MODULE FOR DESCRIPTION</description>
		<languages>
		<language tag="en-GB">en-GB.mod_yj_newsflash5.ini</language>
	</languages>

	<files>
	   <filename module="mod_yj_newsflash5">mod_yj_newsflash5.php</filename>
	   <filename>index.html</filename>
       <filename>lib/slike.php</filename>
       <filename>lib/YJNF5.js</filename>
	   <filename>lib/index.html</filename>
	   <filename>images/index.html</filename>
	   <filename>images/blank.gif</filename>
	   <filename>images/down.gif</filename>
	   <filename>images/up.gif</filename>
	   <filename>images/downh.gif</filename>
	   <filename>images/uph.gif</filename>
	   <filename>stylesheet.css</filename>
<filename>images/yj_extensions.jpg</filename>
	</files>
	
		<params>
 <param name="yj5_iscopy" type="text" default="" label="Is this a COPY?" description="If this is a copy that should run on same page as original please add one of the following suffixes:_1,_2,_3,_4,_5" />
 <param name="yj5_height" type="text" default="300px" label="Module height" description="Define height in pixels" />
<param name="ordering" type="list" default="1" label="Ordering" description="Choose order sequence">
<option value="1">Joomla news item ordering</option>
<option value="2">Most popular</option>
<option value="3">Random  news item</option>

</param>
			            <param name="get_items" type="mos_category" default="1" label="News items categorie" description="In this categorie there must be min 1 news item published" />
			            <param name="nitems" type="text" default="10" label="Number of news items to display" description="Number of news items to display" />
						
						<param name="chars" type="text" default="40" label="Number of characters to display" description="Number of characters to display" />

					   				   
	
<param name="showtitle" type="list" default="1" label="Show news item title" description="Show news item title" >
<option value="1">Yes</option>
<option value="2">No</option>

</param>					   
					<param name="showdate" type="list" default="1" label="Show create date" description="Show create date" >
<option value="1">Yes</option>
<option value="2">No</option>

</param>					   

<param name="showrm" type="list" default="1" label="Show read more link" description="Show read more link" >
<option value="1">Yes</option>
<option value="2">No</option>

</param>   
                       <param name="showimage" type="list" default="1" label="Show intro image" description="Show intro image" >
<option value="1">Yes</option>
<option value="2">No</option>

</param>

					   <param name="imgalign" type="list" default="left" label="Inro image position" description="Number of characters to display" >
					   <option value="left">Left</option>
<option value="right">Right</option>

</param>
					   
					   <param name="imgwidth" type="text" default="40px" label="Intro image width" description="Intro image width" />
					   <param name="imgheight" type="text" default="40px" label="Intro image height" description="Intro image height" />

						
						
						
						
		<param name="moduleclass_sfx" type="text" default="_yjnf5" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
		
	
	
	</params>
</install>
